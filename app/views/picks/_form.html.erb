<%= form_for @pick, html: {multipart: true} do |f| %>
    <% if @pick.errors.any? %>
      <div id="error_explanation">
	<h2><%= pluralize(@pick.errors.count, "error") %> prohibited this pick from being saved:</h2>
      
      <ul>
	  <% @pick.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :caption %><br>
      <%= f.text_field :caption, class: 'form-control' %>
  </div>

  <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control' %>
  </div>

  
  <div class="actions">
    <%= f.submit 'Create Pick', class: 'btn btn-primary' %>
  </div>
<% end %>
